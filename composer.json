{
  "name":              "shmax/graphql-php-validation-toolkit",
  "description":       "Do validation on fields and args for graphql queries and mutations, and dynamically generate user error types",
  "type":              "library",
  "license":           "MIT",
  "homepage":          "https://github.com/shmax/graphql-php-validation-toolkit",
  "keywords":          [
    "graphql",
    "PHP",
    "mutation",
    "validation",
    "user errors"
  ],
  "require": {
    "php": "^7.1",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "doctrine/coding-standard": "^5.0",
    "phpbench/phpbench": "^0.14.0",
    "phpstan/phpstan": "0.11.16",
    "phpstan/phpstan-phpunit": "0.11.2",
    "phpstan/phpstan-strict-rules": "0.11.1",
  	"phpunit/phpcov": "^5.0",
    "phpunit/phpunit": "^7.2",
    "webonyx/graphql-php": "^14.2.0"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "GraphQL\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GraphQL\\Tests\\": "tests/",
      "GraphQL\\Benchmarks\\": "benchmarks/",
      "GraphQL\\Examples\\Blog\\": "examples/01-blog/Blog/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-with-coverage": "phpunit --coverage-html tmp",
    "lint" : "phpcs",
    "fix-style" : "phpcbf",
    "static-analysis": "phpstan analyse --ansi --memory-limit 256M",
    "check-all": "composer lint && composer static-analysis src && composer test"
  }
}
